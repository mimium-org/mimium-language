{
	"name": "mimium-language",
	"displayName": "mimium",
	"description": "language support for mimium, a sound programming language",
	"publisher": "mimium-org",
	"version": "2.2.0",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Programming Languages"
	],
	"icon": "mimium_0.5.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/mimium-org/mimium-language.git"
	},
	"galleryBanner": {
		"color": "#333333",
		"theme": "dark"
	},
	"activationEvents": [
		"onLanguage:mimium"
	],
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "vscode-test"
	},
	"test": {},
	"contributes": {
		"languages": [
			{
				"id": "mimium",
				"aliases": [
					"mimium",
					"Mimium"
				],
				"extensions": [
					".mmm"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "mimium",
				"scopeName": "source.mimium",
				"path": "./syntaxes/mimium.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "mimium",
			"properties": {
				"mimium.sharedir": {
					"required": false,
					"type": "string",
					"default": "~/.mimium",
					"description": "Location of the mimium share directory"
				},
				"mimium.checkupdate": {
					"type": "boolean",
					"default": true,
					"description": "Check if the latest version of mimium is available on startup"
				}
			}
		},
		"commands": [
			{
				"command": "extension.mimiumdownloadbinary",
				"title": "mimium: Download the latest binary"
			},
			{
				"command": "extension.mimiumrun",
				"title": "mimium: Run opening file",
				"icon": "$(play)"
			},
			{
				"command": "extension.mimiumhelp",
				"title": "mimium: Open an online documentation"
			}
		]
	},
	"dependencies": {
		"download": "^8.0.0",
		"got": "^11.8.1"
	},
	"devDependencies": {
		"@types/download": "^6.2.4",
		"@types/eslint": "^7.2.6",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.0",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^4.14.2",
		"@typescript-eslint/parser": "^4.14.2",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"eslint": "^7.19.0",
		"eslint-config-google": "^0.14.0",
		"js-yaml": "^3.13.1",
		"tslint": "^6.1.3",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.21.0"
	},
	"__metadata": {
		"id": "6123f9f9-7fd6-44ce-b65b-68a32b590015",
		"publisherId": "cb37f4b9-a68d-4888-8b0a-8d2e05f36fc6",
		"publisherDisplayName": "mimium-org"
	}
}
